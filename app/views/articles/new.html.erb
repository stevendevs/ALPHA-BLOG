<h1 class="font-bold text-4xl my-10">Nuevo artículo</h1>

<% if @article.errors.any? %>

<div class="toast toast-top toast-end">
<div role="alert" class="alert alert-error">
  <ul class="list-disc list-inside mt-2">
  <% @article.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
  
  </div>
</div>


<% end %>

<%= form_with model: @article, local: true, data: { turbo: false } do |f| %>

  <div class="mb-4">
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title, placeholder: "Título", class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <div class="mb-6">
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description, placeholder: "Descripción", class: "w-full p-2 border border-gray-300 rounded" %>
  </div>

  <%= f.submit "Guardar", class: "focus:outline-none text-white bg-purple-700 hover:bg-purple-800 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-purple-600 dark:hover:bg-purple-700 dark:focus:ring-purple-900" %>
<% end %>
